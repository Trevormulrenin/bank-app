package com.revature.ui;

import com.revature.exceptions.FailedToCreateCustomerException;

public class MainMenu implements Menu {

	public void displayApp() {
		System.out.println("=== Welcome to the Banking Application ===\n");
		
		int choice = 0;
		
		do {
			System.out.println("Where would you like to go next?");
			System.out.println("1. Customer Log-in");
			System.out.println("2. Employee Log-in");
			System.out.println("3. Create an account");
			System.out.println("4. Exit application");
			
			try {
				choice = Integer.parseInt(Menu.sc.nextLine());
			} catch (NumberFormatException e) {
			}
			
			switch(choice) {
			case 1:
				CustomerLogIn cl = new CustomerLogIn();
				cl.displayApp();
				break;
			case 2:
				EmployeeLogIn el = new EmployeeLogIn();
				el.displayApp();
				break;
			case 3:
				CreateAnAccount caa = new CreateAnAccount();
				caa.displayApp();
				break;
			default:
				System.out.println("No valid choice entered, please try again");
			}
		}while (choice != 4);
			
	}
}
